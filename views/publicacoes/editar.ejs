<%- include('../header') %>
<form method="POST" action="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>">
  <label for="titulo">Título</label>
    <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Digite o Título" value="<%= publicacao.titulo %>">
  </div>
  <label for="conteudo">Conteúdo</label>
    <textarea type="text" class="form-control" id="conteudo" name="conteudo" placeholder="Digite o Conteúdo"><%= publicacao.conteudo %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Salvar</button>
</form>
<%- include('../footer') %>